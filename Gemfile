source 'https://rubygems.org'

ruby '2.3.1'

# Bundle edge Rails instead: gem 'rails', github: 'rails/rails'
gem 'rails', '4.2.7.1'

# Use mysql as the database for Active Record
gem 'pg'
# Use SCSS for stylesheets
#gem 'sass-rails', '~> 4.0.3'

# Use Uglifier as compressor for JavaScript assets
gem 'uglifier', '>= 1.3.0'

# Use to upload images
gem 'carrierwave'
gem 'rmagick'

# Use CoffeeScript for .js.coffee assets and views
gem 'coffee-rails', '~> 4.0.0'

# Use jquery as the JavaScript library
gem 'jquery-rails'

# Turbolinks makes following links in your web application faster.
# Read more: https://github.com/rails/turbolinks
gem 'turbolinks'

# Build JSON APIs with ease. Read more: https://github.com/rails/jbuilder
gem 'jbuilder', '~> 2.0'

# Spring speeds up development by keeping your application running in the background.
# Read more: https://github.com/rails/spring
gem 'spring',        group: :development

# Bootstrap a framework css
gem 'bootstrap-sass-rails'

# Fast, Security, Simple and FAST deployment!
gem 'capistrano', '~> 3.2.1'
gem 'capistrano-bundler', '~> 1.1.2'
gem 'capistrano-rails', '~> 1.1.1'

# Add this if you're using rvm
gem 'capistrano-rvm', github: 'capistrano/rvm'

# Use billets in this app.
gem 'brcobranca', '~> 4.0.0'

# For generating the monthly payments in the right time!
gem 'business_time'

# Provides a complete base for logins and user control, the best gem for this JOB!
gem 'devise'

# Just JSON!
gem 'json'

# To get data from Facebook by a connected user.
gem 'koala'

# Provides the connection with oauth2
gem 'omniauth'
gem 'omniauth-oauth2'

# To get data from Facebook by a connected user by a oAuth2 connection.
gem 'omniauth-facebook'

# To get data from oAuth2 by a connected user by a oAuth2 connection.
gem 'omniauth-google-oauth2'

# To get data from Linkedin by a connected user by a oAuth2 connection.
gem 'omniauth-linkedin'

# To get data from Twitter by a connected user by a oAuth2 connection.
gem 'omniauth-twitter'

#for social media
gem 'font-awesome-rails'

# To give the permissions for rails
gem 'cancan'

# for contact form
gem 'mail_form'

group :development do
  gem 'quiet_assets'
end

group :production do
  gem 'rails_12factor'
  gem 'passenger'
end