<div class="portlet-content">
  <%= form_for(@event, html: {id: 'form-condensed'}) do |f| %>
      <% if @event.errors.any? %>
          <div id="error_explanation">
            <h2><%= pluralize(@event.errors.count, 'error') %>
              prohibited this event from being saved:</h2>
            <ul>
              <% @event.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
              <% end %>
            </ul>
          </div>
      <% end %>
      <div class="form-group col-md-12">
        <%= f.label :title, 'Título' %><br />
        <%= f.text_field :title, :class => 'form-control', :required => true , :maxlength => 180 %>
      </div>
      <div class="form-group col-md-12">
        <%= f.label :description, 'Descrição' %><br />
        <%= f.text_area :description, :class => 'form-control', :required => true  %>
      </div>
      <div class="form-group col-md-6">
        <%= f.label :start_time, 'Data de início' %><br />
        <%= f.date_field :start_time, :class => 'form-control', :required => true %>
      </div>
      <div class="form-group col-md-6">
        <%= f.label :end_time, 'Data de término' %><br />
        <%= f.date_field :end_time, :class => 'form-control', :required => true %>
      </div>
      <div class="form-group col-md-6">
        <%= f.submit 'Salvar Evento!', :class => 'btn btn-success', id: 'submit_form' %>
      </div>
  <% end %>
</div>