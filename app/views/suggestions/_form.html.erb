<%= form_for(@suggestion) do |f| %>
    <% if @suggestion.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@suggestion.errors.count, "error") %>
            prohibited this suggestion from being saved:</h2>

          <ul>
            <% @suggestion.errors.full_messages.each do |message| %>
                <li><%= message %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="form-group col-md-12">
      <%= f.label :title, 'Título' %><br />
      <%= f.text_field :title, class: 'form-control' %>
    </div>
    <div class="form-group col-md-12" style="display: none;">
      <%= f.label :email, 'Email' %><br />
      <%= f.text_field :email, class: 'form-control', value: current_user.email %>
    </div>
    <div class="form-group col-md-12">
      <%= f.label :description, 'Descrição' %><br />
      <%= f.text_area :description, class: 'form-control', rows: 4 %>
    </div>
    <div class="form-group col-md-6">
      <%= f.submit 'Enviar sugestão!', class: 'btn btn-success' %>
    </div>
<% end %>
