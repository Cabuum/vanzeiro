<div class="col-md-12 col-md-offset-0">
  <div class="portlet">
    <div class="page-header">
      <h2>Categorias das movimentações do caixa!</h2>
      <div class="text-right">
        <%= link_to raw('<span class="glyphicon glyphicon-plus"></span> Categoria!'),
                    new_movement_category_path, class: 'btn btn-primary' %>
      </div>
    </div>
    <div class="col-md-12">
      <div class="table-responsive">
        <table class="table table-hover table-condensed">
          <thead>
          <tr>
            <th>Nome</th>
            <th>Tipo</th>
            <th colspan="2">Opções</th>
          </tr>
          </thead>

          <tbody>
          <% @movement_categories.each do |movement_category| %>
              <tr>
                <td><%= movement_category.name %></td>
                <td><%= to_readable_type movement_category.type %></td>
                <td>
                  <%= link_to 'Editar', edit_movement_category_path(movement_category),
                              class: 'btn btn-primary center-block' %>
                </td>
                <td>
                  <%= link_to 'Remover', movement_category, method: :delete,
                              data: { confirm: 'Tem certeza? Isso irá afetar os registros
                                vinculados à essa categoria!' },
                              class: 'btn btn-danger center-block' %>
                </td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

<% if notice %>
    <script type="text/javascript">
        document.addEventListener("DOMContentLoaded", function(event) {
            Messenger().post("<%= notice %>!</a>");
        });
    </script>
<% end %>