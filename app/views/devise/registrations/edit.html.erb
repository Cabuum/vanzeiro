<!-- BEGIN CONTENT -->
<div class="page-container row-fluid">

  <%= render 'layouts/administrator_navbar' %>

  <!-- BEGIN PAGE CONTAINER-->
  <div class="page-content">
    <div class="content">
      <!-- BEGIN PlACE PAGE CONTENT HERE -->
      <ul class="breadcrumb">
        <li>
          <p>Você esta em:</p>
        </li>
        <li><a href="#" class="active">Editação de perfil</a> </li>
      </ul>
      <div class="row-fluid">
        <div class="col-md-12">
          <div class="page-title">
            <h3>Editar - <span class="semi-bold">perfil</span></h3>
          </div>
        </div>
        <div class="col-md-12">
          <div class="grid simple">
            <div class="grid-title no-border">
              <h4>Preencha os campos abaixo com as <span class="semi-bold">informações</span></h4>
              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                  <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
              <% end %>
              <div class="tools"> <a href="javascript:;" class="reload"></a> </div>
            </div>
            <div class="grid-body no-border">
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name),
                           html: { id: 'form_traditional_validation', multipart: true, method: :put, role: 'form'}) do |f| %>
                  <div class="row column-seperation">
                    <div class="col-md-6">
                      <h4>Sobre você</h4>

                      <div class="form-group">
                        <%= f.label :name, 'Nome', class: 'form-label' %>
                        <div class="row">
                          <div class="col-md-12">
                            <%= f.text_field :name, class: 'form-control', required: true %>
                          </div>
                        </div>
                      </div>

                      <div class="form-group">
                        <%= f.label :email, 'Email', class: 'form-label' %>
                        <div class="row">
                          <div class="col-md-12">
                            <%= f.text_field :email, class: 'form-control', autofocus: true, required: true %>
                          </div>
                        </div>
                      </div>

                      <div class="form-group">
                        <%= f.label :phone, 'Telefone', class: 'form-label' %>
                        <div class="row">
                          <div class="col-md-12">
                            <%= f.phone_field :phone, class: 'form-control', required: true %>
                          </div>
                        </div>
                      </div>

                      <div class="form-group">
                        <%= f.label :document, 'CPF/CNPJ', class: 'form-label' %>
                        <div class="row">
                          <div class="col-md-12">
                            <%= f.text_field :document, class: 'form-control', required: true %>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="col-md-6 form-group">
                      <h4>Sobre seu negócio</h4>
                      <div class="form-group">
                        <%= f.label :fantasy_name, 'Nome Fantasia', class: 'form-label' %>
                        <div class="row">
                          <div class="col-md-12">
                            <%= f.text_field :fantasy_name, class: 'form-control', required: true %>
                          </div>
                        </div>
                      </div>

                      <div class="form-group">
                        <%= f.label :social_reason, 'Razão social', class: 'form-label' %>
                        <div class="row">
                          <div class="col-md-12">
                            <%= f.text_field :social_reason, class: 'form-control' %>
                          </div>
                        </div>
                      </div>

                      <div class="form-group">
                        <%= f.label :password, 'Senha', class: 'form-label' %>
                        <div class="row">
                          <div class="col-md-12">
                            <%= f.password_field :password, autocomplete: 'off', class: 'form-control',
                                                 title: 'Deixe em branco se você deseja manter a sua senha atual!',
                                                 required: false %>
                          </div>
                        </div>
                      </div>

                      <div class="form-group">
                        <%= f.label :password_confirmation, 'Confirme a senha', class: 'form-label' %>
                        <div class="row">
                          <div class="col-md-12">
                            <%= f.password_field :password_confirmation, class: 'form-control' %>
                          </div>
                        </div>
                      </div>

                      <div class="form-group">
                        <%= f.label :image, 'Deixe o seu perfil com a sua cara', class: 'form-label' %>
                        <div class="row">
                          <div class="col-md-12">
                            <%= f.file_field :image, class: 'form-control' %>
                          </div>
                        </div>
                      </div>

                      <% unless current_user.has_authorizations? %>
                          <div class="form-group">
                            <%= f.label :current_password, 'Senha atual', class: 'form-label' %>
                            <div class="row">
                              <div class="col-md-12">
                                <%= f.password_field :current_password,
                                                     title: 'Precisamos confirmar que você é mesmo você!! :D',
                                                     required: true, class: 'form-control' %>
                              </div>
                            </div>
                          </div>
                      <% end %>

                    </div>
                  </div>
                  <% if resource.errors.any? %>
                      <div class="alert alert-block alert-error fade in col-md-10">
                        <button type="button" class="close" data-dismiss="alert"></button>
                        <h4 class="alert-heading"><i class="icon-warning-sign"></i> Atenção!</h4>
                        A sua tentativa gerou <a href="#" class="link">
                        <%= pluralize(resource.errors.count,'erro') %>: </a>
                        <% resource.errors.full_messages.each do |message| %>
                            <li><%= message %></li>
                        <% end %>
                      </div>
                  <% end %>
                  <div class="pull-right">
                    <%= f.submit 'Salvar', class: 'btn btn-danger btn-cons', id: 'submit_form' %>
                  </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <!-- END PLACE PAGE CONTENT HERE -->
    </div>
  </div>
  <!-- END PAGE CONTAINER -->
</div>
<!-- END CONTENT -->