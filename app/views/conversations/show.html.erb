<!-- BEGIN CONTENT -->
<div class="page-container row-fluid">

  <%= render 'layouts/administrator_navbar' %>

  <!-- BEGIN PAGE CONTAINER-->
  <div class="page-content">
    <div class="content">
      <!-- BEGIN PlACE PAGE CONTENT HERE -->
      <ul class="breadcrumb">
        <li>
          <p>VocÃª esta em:</p>
        </li>
        <li><%= link_to 'Passageiros', passengers_path %> </li>
        <li><%= link_to 'Cadastro de passageiros', new_passenger_path, class: 'active' %> </li>
      </ul>
      <div class="row-fluid">
        <div class="col-md-12">
          <div class="page-title">
            <h3>Cadastrar - <span class="semi-bold">Passageiro</span></h3>
          </div>
        </div>
        <div class="col-md-12">
          <div class="grid simple">

            <div class="grid simple">

              <div class="row">
                <div class="col-md-12">
                  <div class="grid simple no-border ">
                    <div class="grid-title no-border">
                      <h4><%= @conversation.subject %></h4>
                      <p><span class="text-success bold">Chamado: #<%= @conversation.id%></span> - Criado em <%= time_ago_in_words(@conversation.created_at) %></p>
                    </div>
                    <div class="grid-body  no-border">

                      <% @conversation.receipts_for(current_user).each do |receipt| %>
                          <div class="post">
                            <div class="user-profile-pic-wrapper">
                              <div class="user-profile-pic-normal">
                                <%= image_tag(current_user.image_url(:thumb).to_s,
                                              data: {src: current_user.image_url(:thumb).to_s,
                                                     :'src-retina' => current_user.image_url(:thumb2x).to_s}) if current_user.image? %>
                              </div>
                            </div>
                            <div class="info-wrapper">
                              <div class="info">
                                <h3><%= receipt.message.sender.name %></h3>
                                <p><%= simple_format h receipt.message.body %></p>
                                <p class="small-text">Criado em <%= time_ago_in_words(receipt.message.updated_at) %></p>
                              </div>
                              <div class="clearfix"></div>
                            </div>
                            <div class="clearfix"></div>
                          </div>
                      <% end %>

                      <br>
                      <div class="form-actions">
                        <div class="post col-md-12">
                          <div class="user-profile-pic-wrapper">
                            <div class="user-profile-pic-normal">
                              <%= image_tag(current_user.image_url(:thumb).to_s,
                                            data: {src: current_user.image_url(:thumb).to_s,
                                                   :'src-retina' => current_user.image_url(:thumb2x).to_s}) if current_user.image? %>
                            </div>
                          </div>
                          <div class="info-wrapper">
                            <div class="info">Responda</p>
                            </div>
                            <div class="form-group">

                              <%= render 'messages/form', conversation: @conversation %>

                            </div>
                            <div class="clearfix"></div>
                          </div>
                          <div class="clearfix"></div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>


            </div>
          </div>
        </div>
      </div>

      <!-- END PLACE PAGE CONTENT HERE -->
    </div>
  </div>
  <!-- END PAGE CONTAINER -->
</div>
<!-- END CONTENT -->


